<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desk5"

    android:backgroundTint="#00673AB7"
    android:backgroundTintMode="add"
    android:fadeScrollbars="true"
    tools:layout_editor_absoluteX="3dp"
    tools:layout_editor_absoluteY="0dp">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gift"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="87dp"
        android:src="@drawable/create2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home" />

    <Button
        android:id="@+id/button"
        android:layout_width="131dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_invi"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        tools:layout_editor_absoluteX="411dp"
        tools:layout_editor_absoluteY="211dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="111dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/appBarLayout"
        app:layout_constraintStart_toStartOf="@+id/appBarLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gift"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <!--    <TextView-->
    <!--        android:id="@+id/textView6"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginEnd="70dp"-->
    <!--        android:layout_marginBottom="17dp"-->
    <!--        android:scaleX="1"-->
    <!--        android:scaleY="1"-->
    <!--        android:text="设置"-->
    <!--        app:layout_constraintBottom_toBottomOf="@+id/appBarLayout"-->
    <!--        app:layout_constraintEnd_toEndOf="@+id/appBarLayout" />-->

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="266dp"
        android:background="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:popupTheme="@color/white"
            android:background="@color/white"/>


        <LinearLayout
            android:layout_width="364dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:popupBackground="@null"

                />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"

                android:background="@null"
                android:popupBackground="@null"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="题目数量"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:id="@+id/number"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"/>
            <!--            <Button-->
            <!--                android:layout_width="174dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_gravity="center_horizontal" />-->
            <!--            -->
            <Button
                android:id="@+id/print"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_print02"
                android:backgroundTint="@color/black_1"
                android:layout_marginLeft="15dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="297dp"
                tools:layout_editor_absoluteY="20dp"

                />

            <Button
                android:layout_marginLeft="15dp"
                android:id="@+id/highButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_set"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="297dp"
                tools:layout_editor_absoluteY="20dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="20dp"
            android:background="@color/white"/>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="185dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="生成题目"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />
</androidx.constraintlayout.widget.ConstraintLayout>