<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_2"
    tools:context=".ui.notifications.NotificationsFragment">



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="364dp"
                android:layout_height="20dp"
                android:background="@color/white_4"/>
            <ImageView
                android:layout_width="171dp"
                android:layout_height="79dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_view05" />
            <LinearLayout
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                android:layout_width="339dp"
                android:layout_height="93dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_view2"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="总题数："
                    android:textColor="@color/black_1"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"

                    android:textColor="@color/black_1"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="339dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_view2"

                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="错题数："
                    android:textColor="@color/black_1"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black_1"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="339dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_view2"

                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="正确率："
                    android:textColor="@color/black_1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/crate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"

                    android:textSize="20sp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="339dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_view2"

                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="关于我们:     +Q 819705962"
                    android:textColor="@color/black_1"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="339dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white_4"
                tools:ignore="MissingConstraints"
                >

                <ImageView
                    android:layout_marginTop="24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="144.5dp"

                    android:src="@drawable/ic_view7" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“遇到困难睡大觉”"
                android:textSize="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>


    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>